{
  "manifest_version": 3,
  "name": "UV Alert",
  "version": "1.0",
  "description": "Reminds you if high UV levels are expected today.",
  "permissions": ["alarms", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "UV Alert"
  },
  "icons": {
    "48": "icon.png"
  }
}